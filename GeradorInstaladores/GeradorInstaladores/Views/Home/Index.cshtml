@{
    ViewBag.Title = "Instaladores";
}

<div class="container">
    <div class="row offset-4">
        <h1 class="display-5">Instaladores</h1>
    </div>
    <hr />
    <form id="frmAdd">
        <div class="row">
            <div class="col-sm">
                <h6>
                    Nome/Fila:
                </h6>
                <input class="form-control" type="text" id="txtFila" required autofocus />
            </div>
            <div class="col-sm">
                <h6>
                    IP:
                </h6>
                <input class="form-control" type="text" id="txtIP" required pattern="((^|\.)((25[0-5])|(2[0-4]\d)|(1\d\d)|([1-9]?\d))){4}$" />
            </div>
            <div class="col-sm">
                <h6>
                    Modelo:
                </h6>
                <select class="form-control" id="dropdownModelo">
                    <option value="carregando">Carregando...</option>
                </select>
            </div>
            <div class="col-sm">
                <button type="submit" id="btnAdd" class="btn btn-primary form-control" style="margin-top: 25px;">Adicionar</button>
            </div>
        </div>
    </form>
    <hr />
    <div class="row">
        <table class="table table-striped table-bordered table-hover" id="tblEquipamentos">
            <thead>
                <tr>
                    <th scope="col" style="width: 30%">Fila</th>
                    <th scope="col" style="width: 30%">IP</th>
                    <th scope="col" style="width: 30%">Modelo</th>
                    <th scope="col" style="width: 10%">Remover</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
    <hr />
    <form id="frmCriaInstalador">
        <div class="row">
            <div class="col-2" style="margin-top: 10px;">
                <h6>
                    Nome/Cliente:
                </h6>
            </div>
            <div class="col-6">
                <input class="form-control" type="text" id="txtNomeInstalador" required />
            </div>
        </div>
        <hr />
        <div class="row">
            <button type="submit" id="btnCriarInstalador" class="btn btn-primary btn-lg btn-block">Criar instalador</button>
        </div>
    </form>
</div>

@section Scripts
{
    <script src="@Url.Content("~/Scripts/jsIndex.js")"></script>
}